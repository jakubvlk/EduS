@model EduS_MVC.Models.IndividualModel

@{
    ViewBag.Title = "EditSubjects";
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Edit schedule</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <table>

            <tr><th>Day</th><th>   9:00-12:00   </th><th>   12:00-16:00   </th><th>   16:00-20:00   </th></tr>
            <tr>
                <td>Monday</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.MO9))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.MO12))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.MO16))</td>
            </tr>
            <tr>
                <td>Tuesday</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.TU9))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.TU12))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.TU16))</td>
            </tr>
            <tr>
                <td>Wednesday</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.WE9))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.WE12))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.WE16))</td>
            </tr>
            <tr>
                <td>Thursday</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.TH9))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.TH12))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.TH16))</td>
            </tr>
            <tr>
                <td>Friday</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.FR9))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.FR12))</td>
                <td>@Html.DisplayName(Model.GetSubjectName(Model.FR16))</td>
            </tr>

        </table>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Schedule", "Schedule")
</div>