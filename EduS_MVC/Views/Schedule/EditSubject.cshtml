@model EduS_MVC.Models.IndividualModel

@{
    ViewBag.Title = "EditSubjects";
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Edit schedule</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <table>

            <tr><th>Day</th><th>   9:00-12:00   </th><th>   12:00-16:00   </th><th>   16:00-20:00   </th></tr>
            <tr>
                <td>Monday</td>
                <td>@Html.DropDownListFor(m => m.MO9, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.MO12, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.MO16, Model.GetAllSubjectsForFaculty())</td>
            </tr>
            <tr>
                <td>Tuesday</td>
                <td>@Html.DropDownListFor(m => m.TU9, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.TU12, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.TU16, Model.GetAllSubjectsForFaculty())</td>
            </tr>
            <tr>
                <td>Wednesday</td>
                <td>@Html.DropDownListFor(m => m.WE9, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.WE12, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.WE16, Model.GetAllSubjectsForFaculty())</td>
            </tr>
            <tr>
                <td>Thursday</td>
                <td>@Html.DropDownListFor(m => m.TH9, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.TH12, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.TH16, Model.GetAllSubjectsForFaculty())</td>
            </tr>
            <tr>
                <td>Friday</td>
                <td>@Html.DropDownListFor(m => m.FR9, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.FR12, Model.GetAllSubjectsForFaculty())</td>
                <td>@Html.DropDownListFor(m => m.FR16, Model.GetAllSubjectsForFaculty())</td>
            </tr>

        </table>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Schedule", "Schedule")
</div>


