@model EduS_MVC.Models.NewSubjectProfile

@{
    ViewBag.Title = "Create";

    //var roleItems = Roles.GetUsersInRole("gurantor");
    //SelectList sl = new SelectList(roleItems);

    EduS_MVC.Controllers.FacultyController fc = new EduS_MVC.Controllers.FacultyController();
    //List<SelectListItem> tmp = new List<SelectListItem>();
    //tmp.Add(new SelectListItem() { Selected = true, Text = "FEI", Value = "1"});
    //tmp.Add(new SelectListItem() { Selected = true, Text = "FMMI", Value = "2"});
    var faculties = fc.GetFacultiesList();
    
    
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new subject.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
                @Html.LabelFor(m => m.FacultyID)
                @Html.DropDownListFor(m => m.FacultyID, faculties)
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description)
                @Html.LabelFor(m => m.Guarantor)
                @Html.DropDownListFor(m => m.Guarantor, Model.GetAllGurantors())
                @Html.LabelFor(m => m.Prerequsites)
                @Html.TextBoxFor(m => m.Prerequsites)
                @Html.LabelFor(m => m.Credits)
                @Html.TextBoxFor(m => m.Credits)
            </li>
        </ol>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "AllSubjects", "Subject")
</div>

