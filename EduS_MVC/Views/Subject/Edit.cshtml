@model EduS_MVC.Models.SubjectProfile

@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Edit subject</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description)
                @Html.LabelFor(m => m.Guarantor)
                @Html.TextBoxFor(m => m.Guarantor)
                @Html.LabelFor(m => m.Prerequsites)
                @Html.TextBoxFor(m => m.Prerequsites)
                @Html.LabelFor(m => m.Credits)
                @Html.TextBoxFor(m => m.Credits)
            </li>
        </ol>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "AllSubjects", "Subject")
</div>

